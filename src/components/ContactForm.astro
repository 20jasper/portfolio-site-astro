---
type Props = {
	isJobHunting: boolean;
	pageIndex: number;
};

const { isJobHunting, pageIndex } = Astro.props;
---

<>
	<span
		class="navigation"
		id="contactMe"
	></span>
	<form
		name=`contact-page-${pageIndex}`
		method="POST"
		data-netlify="true"
	>
		<h2>Contact me</h2>

		{isJobHunting && <p>I am currently looking for full time work</p>}
		<label>
			Name
			<input
				type="text"
				name="name"
				required
			/>
		</label>
		<label>
			Email
			<input
				type="email"
				name="email"
				required
			/>
		</label>
		<label>
			Message
			<textarea
				name="message"
				required
			></textarea>
		</label>
		<button type="submit">Submit</button>
	</form>
</>
